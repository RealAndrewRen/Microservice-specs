  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Logs a user into the system",
        "produces": "application/json",
        "parameters": [
          {
            "name": "credentials",
            "in": "body",
            "description": "Login credentials",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "gordon.gekko@gekco.com",
                  "description": "Email of a user assigned to a company"
                },
                "password": {
                  "type": "string",
                  "example": "password",
                  "description": "Password of a user assigned to a company"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successful",
            "schema": {
              "type": "object",
              "properties": {
                "token_type": {
                  "type": "string",
                  "format": "uuid",
                  "example": "Bearer",
                  "description": ""
                },
                "access_token": {
                  "type": "string",
                  "format": "uuid",
                  "example": "eyJhbGciOiJSUzUxMiIsInR5cC",
                  "description": ""
                },
                "expires_in": {
                  "type": "number",
                  "example": "3600",
                  "description": ""
                },
                "expires_on": {
                  "type": "number",
                  "example": "1479664807",
                  "description": ""
                },
                "firstName": {
                  "type": "string",
                  "example": "Gordon",
                  "description": "First name of a user assigned to a company"
                },
                "lastName": {
                  "type": "string",
                  "example": "Gecko",
                  "description": "Last name of a user assigned to a company"
                },
                "email": {
                  "type": "string",
                  "example": "gordon.gekko@gekco.com",
                  "description": "Email of a user assigned to a company"
                },
                "company": {
                  "type": "string",
                  "example": "GekkoCo",
                  "description": "Company of the user"
                }
              }
            }
          },
          "400": {
            "description": "invalid input, object invalid, or bad request"
          },
          "401": {
            "description": "no authorization token was found or provided token is incorrect"
          },
          "500": {
            "description": "application error"
          }
        }
      }
    },
